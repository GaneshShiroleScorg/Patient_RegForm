<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_unfilled_color"
    tools:context="com.scorg.forms.activities.PersonalInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:padding="@dimen/dp5"
                app:srcCompat="@drawable/ic_logo" />

            <com.scorg.forms.customui.CustomTextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8"
                android:layout_toEndOf="@+id/logo"
                android:layout_toRightOf="@+id/logo"
                android:padding="@dimen/dp8"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbar_title_size"
                app:customFont="@string/roboto_bold" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/tab_unfilled_color"
            app:srcCompat="@drawable/toolbarshadow" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/mobileTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <com.scorg.forms.customui.CustomTextView
                android:id="@+id/mobileTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/view_margin"
                android:paddingEnd="@dimen/view_margin"
                android:textSize="@dimen/section_title_text_size"
                app:customFont="@string/roboto_medium"
                android:layout_centerVertical="true"
                android:text="@string/mobile"/>

            <com.scorg.forms.customui.CustomEditText
                android:id="@+id/mobileText"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/view_margin"
                android:paddingEnd="@dimen/view_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/mobileTextLabel"
                android:layout_toRightOf="@+id/mobileTextLabel"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="10"
                android:imeOptions="actionGo"
                android:textSize="@dimen/section_title_text_size" />

            <ImageView
                android:id="@+id/getInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_toEndOf="@+id/mobileText"
                android:layout_toRightOf="@+id/mobileText"
                android:padding="@dimen/dp5"
                app:srcCompat="@drawable/ic_navigate_next_24dp" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomTabLayout"
            android:layout_below="@+id/mobileTextLayout"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/view_margin"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginBottom="@dimen/view_margin"/>

        <RelativeLayout
            android:id="@+id/bottomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/view_margin"
            android:paddingEnd="@dimen/view_margin"
            android:visibility="gone"
            android:paddingStart="@dimen/view_margin">

            <android.support.design.widget.TabLayout
                android:id="@+id/formTabLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:tabGravity="center"
                app:tabMaxWidth="250dp"
                app:tabMinWidth="120dp"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabMode="fixed"
                app:tabPaddingEnd="@dimen/dp5"
                app:tabPaddingStart="@dimen/dp5"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
