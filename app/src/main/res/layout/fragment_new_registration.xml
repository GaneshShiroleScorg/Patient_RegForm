<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.scorg.forms.fragments.NewRegistrationFragment">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="296dp"
                    android:layout_height="296dp"
                    android:layout_gravity="center"
                    android:alpha=".8"
                    app:srcCompat="@drawable/imgpsh_fullsize" />

                <LinearLayout
                    android:id="@+id/mobileTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical">

                    <com.scorg.forms.customui.CustomTextView
                        android:id="@+id/mobileTextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp12"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Enter Mobile Number"
                        android:textSize="@dimen/section_title_text_size"
                        app:customFont="@string/roboto_medium" />

                    <com.scorg.forms.customui.CustomEditText
                        android:id="@+id/mobileText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0"
                        android:layout_marginBottom="@dimen/dp16"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionGo"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:text=""
                        android:textSize="@dimen/section_title_text_size" />

                    <com.scorg.forms.customui.CustomButton
                        android:id="@+id/getInfoButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp0"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp12"
                        android:layout_weight="1"
                        android:background="@drawable/button_register"
                        android:text="@string/submit"
                        app:customFont="@string/roboto_medium"
                        android:textColor="@android:color/white"
                        app:srcCompat="@drawable/ic_navigate_next_24dp" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="1.4"/>

    </LinearLayout>
