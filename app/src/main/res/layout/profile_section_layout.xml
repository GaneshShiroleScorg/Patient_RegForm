<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/profilePhoto"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/dp26"
        android:layout_marginLeft="@dimen/dp26"
        android:layout_marginStart="@dimen/dp26"
        android:layout_marginTop="@dimen/dp26"
        android:background="@drawable/profile_photo_back"
        android:cropToPadding="true"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_camera">

    </android.support.v7.widget.AppCompatImageView>

    <LinearLayout
        android:id="@+id/fieldsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profilePhoto"
        android:layout_toRightOf="@id/profilePhoto"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp8"
        android:paddingEnd="@dimen/view_margin"
        android:paddingStart="@dimen/view_margin"
        android:paddingTop="@dimen/dp8" />

</RelativeLayout>
